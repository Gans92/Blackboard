<%
    var video_title = '';
    if (typeof c === 'object') {
        var lectureId = c.id;
    }
    var did = 0;
    var url = '';
    var link = '';
    var dbutton = 'Create';
    var dheading = 'Add New Document'
    if (typeof doc === 'object') {
        var lectureId = doc.courseId;
        video_title = doc.name;
        did = doc.id;
        url = doc.url;
        link = doc.link;
        //order = video.order;
        dbutton = 'Save'
        dheading = 'Edit Document'
    }
%>
<form method="post" action="/docUpdate" class="form-horizontal" enctype="multipart/form-data">

    <h4 class="text-center"><%= dheading %></h4>

    <!-- hidden id and lectureId -->
    <input type="hidden" name="id" value="<%= did %>">
    <input type="hidden" name="lecture" value="<%= c.id %>">

    <!-- video_title -->
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Document*</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="lecture name" name="title" value="<%= video_title %>">
        </div>
    </div>

    <!-- url -->
    <% if (url) { %>
        <div class="form-group">
            <label class="control-label col-sm-2" for="url"></label>
            <div class="col-sm-10 text-left">
                <a class="" id="url" href="<%= url %>" target="_blank">Preview File</a>
            </div>
        </div>
    <% } %>

    <div class="form-group">
        <label class="control-label col-sm-2" for="url">File*</label>
        <div class="col-sm-10">
            <input class="form-control" type="file" id="url" name="video" value="<%= url %>">
        </div>
    </div>

    <!-- link -->
    <% if (link) { %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="link"></label>
      <div class="col-sm-10 text-left">
        <a class="" id="link" href="<%= link %>" target="_blank">Preview Link</a>
      </div>
    </div>
    <% } %>

    <div class="form-group">
      <label class="control-label col-sm-2" for="link">Links</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="link" name="doclink" value="<%= link %>">
      </div>
    </div>

    <!-- buttons -->
    <div class="form-group">
        <div class="col-sm-2 col-sm-offset-2">
            <input class="form-control btn btn-primary" type="submit" value="<%= dbutton %>">
        </div>
    </div>
</form>
